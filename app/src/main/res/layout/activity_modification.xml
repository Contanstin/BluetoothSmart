<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#4698F1" >
        <ImageButton
            android:id="@+id/title_backBtn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@mipmap/title_back"
             />
        <TextView
            android:id="@+id/title_centerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改蓝牙信息"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
             />
        <ImageView
            android:id="@+id/ble_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ble_disconnect"
            android:visibility="gone"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:hint="请输入新的名字"
        android:textColor="#3B3B3B"
        android:textSize="16sp"
        android:maxLines="1"/>
    <EditText
        android:id="@+id/Interval"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:hint="请输入新的间隔,范围为6-1600"
        android:textColor="#3B3B3B"
        android:textSize="16sp"
        android:maxLines="1"/>
    <Button
        android:id="@+id/startsetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/button_blue"
        android:text="开始设置名字"/>

    <Button
        android:id="@+id/startsetInterval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/button_blue"
        android:text="开始设置间隔"/>


</LinearLayout>